<launch>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find edubot_control)/config/edubot_control.yaml" command="load"/>

    <!-- load the controllers -->
    <!-- <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/edubot" args="wheel_R_velocity_controller joint_state_controller"/> -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/edubot" args="joint_state_controller wheel_R_velocity_controller wheel_L_velocity_controller"/>

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
        <remap from="/joint_states" to="/edubot/joint_states" />
    </node>

</launch>